<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ad_index_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffe9edf2" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffe9edf2"
        android:orientation="vertical"
        android:padding="8.0dip" >

        <RelativeLayout
            android:id="@+id/privacy_mgr_btn"
            android:layout_width="fill_parent"
            android:layout_height="65.0dip"
            android:layout_marginBottom="8.0dip"
            android:background="@drawable/ad_index_item_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15.0dip" >

            <ImageView
                android:id="@+id/privacy_mgr_icon"
                style="@style/ListIcon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:src="@drawable/privacy_sort_block_press" />

            <ImageView
                android:id="@+id/arrow_privacy_mgr"
                style="@style/ListIcon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingRight="10.0dip"
                android:src="@drawable/privacy_category_arrow" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toLeftOf="@+id/arrow_privacy_mgr"
                android:layout_toRightOf="@+id/privacy_mgr_icon"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/privacy_mgr_text"
                    style="@style/ListItemSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="5.0dip"
                    android:text="privacy_sort_item_root_mgr"
                    android:textColor="#ff3f4040"
                    android:textSize="17.0dip" />

                <TextView
                    android:id="@+id/privacy_mgr_dscp"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingRight="5.0dip"
                    android:textColor="#ff626262"
                    android:textSize="17.0dip" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ad_index_item_selector"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/net_btn"
                android:layout_width="fill_parent"
                android:layout_height="65.0dip"
                android:background="@drawable/list_first_item_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingLeft="15.0dip" >

                <ImageView
                    android:id="@+id/privacy_net_icon"
                    style="@style/ListIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/privacy_index_net_bg" />

                <ImageView
                    android:id="@+id/arrow_net"
                    style="@style/ListIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="10.0dip"
                    android:src="@drawable/privacy_category_arrow" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/arrow_net"
                    android:layout_toRightOf="@+id/privacy_net_icon" >

                    <TextView
                        android:id="@+id/textView1"
                        style="@style/ListItemSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="5.0dip"
                        android:text="privacy_net_activity_title"
                        android:textColor="#ff3f4040"
                        android:textSize="17.0dip" />

                    <TextView
                        android:id="@+id/privacy_net_dscp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="5.0dip"
                        android:textColor="#ff626262"
                        android:textSize="17.0dip" />

                    <ImageView
                        android:id="@+id/privacy_net_new_image"
                        android:layout_width="30.0dip"
                        android:layout_height="30.0dip"
                        android:layout_alignParentTop="true"
                        android:layout_margin="5.0dip"
                        android:layout_toRightOf="@+id/textView1"
                        android:src="@drawable/privacy_index_new_bg"
                        android:visibility="gone" />
                </RelativeLayout>
            </RelativeLayout>

            <ImageView style="@style/HorizontalSolidDivider" />

            <RelativeLayout
                android:id="@+id/phonenumber_btn"
                android:layout_width="fill_parent"
                android:layout_height="65.0dip"
                android:background="@drawable/list_item_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingLeft="15.0dip" >

                <ImageView
                    android:id="@+id/privacy_phonenumber_icon"
                    style="@style/ListIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/privacy_sort_phonenumber_press" />

                <ImageView
                    android:id="@+id/arrow_phonenumber"
                    style="@style/ListIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="10.0dip"
                    android:src="@drawable/privacy_category_arrow" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/arrow_phonenumber"
                    android:layout_toRightOf="@+id/privacy_phonenumber_icon" >

                    <TextView
                        style="@style/ListItemSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="5.0dip"
                        android:text="privacy_sort_item_phonenumber"
                        android:textColor="#ff3f4040"
                        android:textSize="17.0dip" />

                    <TextView
                        android:id="@+id/privacy_phonenumber_dscp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="5.0dip"
                        android:textColor="#ff626262"
                        android:textSize="17.0dip" />
                </RelativeLayout>
            </RelativeLayout>

            <ImageView style="@style/HorizontalSolidDivider" />

            <RelativeLayout
                android:id="@+id/gps_btn"
                android:layout_width="fill_parent"
                android:layout_height="65.0dip"
                android:background="@drawable/list_item_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingLeft="15.0dip" >

                <ImageView
                    android:id="@+id/privacy_sort_gps_icon"
                    style="@style/ListIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/privacy_sort_location_press" />

                <ImageView
                    android:id="@+id/arrow_gps"
                    style="@style/ListIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="10.0dip"
                    android:src="@drawable/privacy_category_arrow" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/arrow_gps"
                    android:layout_toRightOf="@+id/privacy_sort_gps_icon" >

                    <TextView
                        style="@style/ListItemSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="5.0dip"
                        android:text="privacy_sort_item_location"
                        android:textColor="#ff3f4040"
                        android:textSize="17.0dip" />

                    <TextView
                        android:id="@+id/privacy_sort_location_dscp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="5.0dip"
                        android:textColor="#ff626262"
                        android:textSize="17.0dip" />
                </RelativeLayout>
            </RelativeLayout>

            <ImageView style="@style/HorizontalSolidDivider" />

            <RelativeLayout
                android:id="@+id/sms_btn"
                android:layout_width="fill_parent"
                android:layout_height="65.0dip"
                android:background="@drawable/list_item_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingLeft="15.0dip" >

                <ImageView
                    android:id="@+id/privacy_sort_sms_icon"
                    style="@style/ListIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/privacy_sort_sms_press" />

                <ImageView
                    android:id="@+id/arrow_sms"
                    style="@style/ListIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="10.0dip"
                    android:src="@drawable/privacy_category_arrow" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/arrow_sms"
                    android:layout_toRightOf="@+id/privacy_sort_sms_icon" >

                    <TextView
                        style="@style/ListItemSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="5.0dip"
                        android:text="privacy_sort_item_sms"
                        android:textColor="#ff3f4040"
                        android:textSize="17.0dip" />

                    <TextView
                        android:id="@+id/privacy_sort_sms_dscp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="5.0dip"
                        android:textColor="#ff626262"
                        android:textSize="17.0dip" />
                </RelativeLayout>
            </RelativeLayout>

            <ImageView style="@style/HorizontalSolidDivider" />

            <RelativeLayout
                android:id="@+id/content_btn"
                android:layout_width="fill_parent"
                android:layout_height="65.0dip"
                android:background="@drawable/list_item_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingLeft="15.0dip" >

                <ImageView
                    android:id="@+id/privacy_sort_contact_icon"
                    style="@style/ListIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/privacy_sort_contact_press" />

                <ImageView
                    android:id="@+id/arrow_contact"
                    style="@style/ListIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="10.0dip"
                    android:src="@drawable/privacy_category_arrow" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/arrow_contact"
                    android:layout_toRightOf="@+id/privacy_sort_contact_icon" >

                    <TextView
                        style="@style/ListItemSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="5.0dip"
                        android:text="privacy_sort_item_contact"
                        android:textColor="#ff3f4040"
                        android:textSize="17.0dip" />

                    <TextView
                        android:id="@+id/privacy_sort_contact_dscp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="5.0dip"
                        android:textColor="#ff626262"
                        android:textSize="17.0dip" />
                </RelativeLayout>
            </RelativeLayout>

            <ImageView style="@style/HorizontalSolidDivider" />

            <RelativeLayout
                android:id="@+id/history_btn"
                android:layout_width="fill_parent"
                android:layout_height="65.0dip"
                android:background="@drawable/list_item_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingLeft="15.0dip" >

                <ImageView
                    android:id="@+id/privacy_sort_history_icon"
                    style="@style/ListIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/privacy_sort_history_press" />

                <ImageView
                    android:id="@+id/arrow_history"
                    style="@style/ListIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="10.0dip"
                    android:src="@drawable/privacy_category_arrow" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/arrow_history"
                    android:layout_toRightOf="@+id/privacy_sort_history_icon" >

                    <TextView
                        style="@style/ListItemSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="5.0dip"
                        android:text="privacy_sort_item_history"
                        android:textColor="#ff3f4040"
                        android:textSize="17.0dip" />

                    <TextView
                        android:id="@+id/privacy_sort_history_dscp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="5.0dip"
                        android:textColor="#ff626262"
                        android:textSize="17.0dip" />
                </RelativeLayout>
            </RelativeLayout>

            <ImageView style="@style/HorizontalSolidDivider" />

            <RelativeLayout
                android:id="@+id/identity_btn"
                android:layout_width="fill_parent"
                android:layout_height="65.0dip"
                android:background="@drawable/list_last_item_selector"
                android:clickable="true"
                android:orientation="horizontal"
                android:paddingLeft="15.0dip" >

                <ImageView
                    android:id="@+id/privacy_sort_identity_icon"
                    style="@style/ListIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/privacy_sort_identity_press" />

                <ImageView
                    android:id="@+id/arrow_identity"
                    style="@style/ListIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:paddingRight="10.0dip"
                    android:src="@drawable/privacy_category_arrow" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/arrow_identity"
                    android:layout_toRightOf="@+id/privacy_sort_identity_icon" >

                    <TextView
                        style="@style/ListItemSummary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="5.0dip"
                        android:text="privacy_sort_item_identity"
                        android:textColor="#ff3f4040"
                        android:textSize="17.0dip" />

                    <TextView
                        android:id="@+id/privacy_sort_identity_dscp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:paddingRight="5.0dip"
                        android:textColor="#ff626262"
                        android:textSize="17.0dip" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/all_btn"
            android:layout_width="fill_parent"
            android:layout_height="65.0dip"
            android:layout_marginTop="8.0dip"
            android:background="@drawable/ad_index_item_selector"
            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="15.0dip" >

            <ImageView
                android:id="@+id/privacy_sort_all_icon"
                style="@style/ListIcon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:src="@drawable/privacy_sort_all_press" />

            <ImageView
                android:id="@+id/arrow_all"
                style="@style/ListIcon"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:paddingRight="10.0dip"
                android:src="@drawable/privacy_category_arrow" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_toLeftOf="@+id/arrow_all"
                android:layout_toRightOf="@+id/privacy_sort_all_icon"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    style="@style/ListItemSummary"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="5.0dip"
                    android:text="privacy_sort_item_all"
                    android:textColor="#ff3f4040"
                    android:textSize="17.0dip" />

                <TextView
                    android:id="@+id/privacy_sort_all_dscp"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:paddingRight="5.0dip"
                    android:textColor="#ff626262"
                    android:textSize="17.0dip" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>